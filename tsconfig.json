{
  "compilerOptions": {
      "module": "commonjs",
      "lib": [
          "es6"
      ],
      "allowJs": true,
      "checkJs": true,
      "target": "es6",
      "strict": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "baseUrl": "./src",
      "outDir": "./lib",
      "types": [],
      "noEmit": false,
      "declaration": true,
      "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/*.ts",
    "src/*.d.ts",
  ]
}